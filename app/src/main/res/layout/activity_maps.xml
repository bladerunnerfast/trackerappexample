<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.jamessmith.trackerappexample1.MapsActivity"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/cl_favorites_bottom_sheet_container"
        android:layout_width="match_parent"
        android:layout_gravity="bottom"
        android:layout_height="match_parent">

        <include
            layout="@layout/bottom_sheet"
            tools:layout_editor_absoluteY="401dp" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/btn_favorites_list_bottom_sheet"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_anchor="@+id/rl_favorites_bottomSheetLayout"
            app:layout_anchorGravity="right|top" />
    </android.support.design.widget.CoordinatorLayout>
    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment" />



</LinearLayout>
